{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/v1/signup",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/signup",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://service-user-authentication:8003"],
          "disable_host_sanitize": false
        }
      ],
      "timeout": "5000ms"
    }
  ]
}
