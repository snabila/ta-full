{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/auth/signup",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/signup",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://service-user:8003"],
          "disable_host_sanitize": false
        }
      ],
      "timeout": "5000ms"
    },
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/api/login",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": ["http://service-user:8003"],
          "disable_host_sanitize": false
        }
      ],
      "timeout": "5000ms"
    },
    {
      "endpoint": "/auth/user",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/user",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["http://service-user:8003"],
          "disable_host_sanitize": false
        }
      ],
      "input_headers": ["Cookie"]
    },
    {
      "endpoint": "/auth/logout",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/api/logout",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "host": ["http://service-user:8003"],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
